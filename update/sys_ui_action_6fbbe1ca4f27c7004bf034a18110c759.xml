        <name>Cancel</name>
        <onclick/>
        <order>300</order>
        <script><![CDATA[if(current.status == 'approved'){
	var days = parseInt(current.number_of_days);
	//Find the user
	var ugr = new GlideRecord('sys_user');
	if(ugr.get(current.requester)){
		if(current.type == 'paid_leave'){
			//If payed leave validate days left
			var leftPaidLeaves = parseInt(ugr.getValue('x_162627_absence_a_left_paid_leaves'));
			ugr.x_162627_absence_a_left_paid_leaves= leftPaidLeaves + days;
		} else if(current.type == 'unpaid_leave') {
			//increment the used unpaid leaves
			var usedUnpaidLeaves = parseInt(ugr.getValue('x_162627_absence_a_used_unpaid_leaves'));
			ugr.x_162627_absence_a_used_unpaid_leaves = usedUnpaidLeaves - days;
		} else {
			var usedMedicalLeaves = parseInt(ugr.getValue('x_162627_absence_a_used_medical_leaves'));
			ugr.x_162627_absence_a_used_medical_leaves = usedMedicalLeaves - days;
		}
		ugr.update();
		current.status = 'canceled';
		current.update();
	}
	
} else {
	current.status = 'canceled';
	current.update();
}]]></script>
